        <div class="col-lg-12 col-md-12">
        {% if article.tags contains 'classic' %}
                <div class="blogPostClassic">
                    <div class="blogThumb">
                        <img src="{{ article.excerpt }}" class="blogasview img-responsive" alt="" />
                        <div class="thumbBar"></div>
                    </div>
                    <table border="1" class="blogDetails">
                    <tr>
                    <td><a href="#"><img src="{{'dateIcon.png' | asset_url }}" alt="" class="blogIcon" />{{ article.published_at | date: '%b-%d' }}</a></td>
                    <td><a href="{{article.url}}#disqus_thread"></a></td>
                    <td><a class="addthis_button_facebook_like" fb:like:layout="button_count"></a></td>
                    </tr>
                    </table>
                    <h4><a href="#">{{ article.title }}</a></h4>
                    <p>{{ article.content }}</p>
                </div>
        {% elsif article.tags contains 'photo' %}
            <div class="blogPostClassic">
                <div class="blogThumb">
                <ul class="bxsliderBlog">
                    {{article.excerpt}}
                </ul>
                    <div class="thumbBar"></div>
                </div>
                <table border="1" class="blogDetails">
                    <tr>
                    <td><a href="#"><img src="{{'dateIcon.png' | asset_url }}" alt="" class="blogIcon" />{{ article.published_at | date: '%b-%d' }}</a></td>
                    <!-- <td><a href="{{article.url}}#disqus_thread"></a></td> -->
                    </tr>
                </table>
                <h4><a href="#">{{ article.title }}</a></h4>
                    <p>{{ article.content }}</p>
            </div>
            
        {% endif %} 




            </div><!-- end post -->
            <div id="disqus_thread"></div>