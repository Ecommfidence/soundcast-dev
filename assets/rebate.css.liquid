.nav-pad {padding-top: 120px;}
.top-banner { background-color: #999; }
.top-banner h1 {color: white; margin:0; padding: 15px 0; font-weight:bold;}
.savings {text-shadow: 2px 2px #e1e1e1;}
.savings h1 {font-size: 10em; color: #dc9536; text-shadow: 2px 2px black;}
.savings h3 {font-size: 3em;color: #999;margin: 5px 0;}
.savings hr {color: #999;background-color: #999; height: 4px;}
#rebate .disclaim {color:#999;padding-right:100px;}

#rebate h1,#rebate h2,#rebate h3,#rebate h4,#rebate h5,#rebate h6,#rebate p{font-family: Arial!important;}
#rebate .divider { width:90%; margin: 60px 5%; color: #999;background-color: #999; height: 2px; }
#rebate .product {border:none;}
#rebate .image-wrapper h1 { font-size: 4em; margin-top: 50px; }
#rebate .price-box h1 {font-size: 5em; margin:0;}
#rebate .price-box h4 {color: red;}
#rebate .action button {margin-top: 35px;}
#rebate .action p a {color: rgba(0,0,0,0.8);}
#rebate .action p a:hover {color: rgba(0,0,0,0.4);}

#rebate .arrow-down {
	width: 0; 
	height: 0; 
	border-left: 20px solid transparent;
	border-right: 20px solid transparent;
	border-top: 20px solid #999;
  	position: absolute;
	left: 22.5%;
}

#Sound-Carousel #slide-1 {padding: 50px 0 115px 0;}

#retail_locate .shadow {display: inline;}

@media (min-width: 767px) {
	.bord-rt { border-right: 2px solid #999!important;  }
}
@media (max-width: 766px) {
	.bord-rt { border-bottom: 2px solid #999!important;  }
}

.relative-div {height:100%; position: relative;}
.abs-img {top:0;right:0;position:absolute;width:20%;}