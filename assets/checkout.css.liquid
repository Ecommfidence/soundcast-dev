@import url(https://fonts.googleapis.com/css?family=Open+Sans:400italic,700italic,400,700);
@import url(https://fonts.googleapis.com/css?family=Fauna+One);
@import url(https://fonts.googleapis.com/css?family=Lato);

/* @group Reset */

/* Undo background and gradiant */
 #main, #container {
  background: #fff;
  border: 2px solid #f93; border-top: none;
}
#header { background: #184378; border: 2px solid #f93; border-bottom: none;  }
#main #overview > * {
  border: none;
}

#main #thumbs div {
  border: none;
  }

/* Undo overview background and borders */
#main #overview {
  background: #fff;
  border: none;
  text-transform:capitalize;
}

/* center the title */
#header > h1{
  text-align:center;
}


/* @end */

/* @group Globals */

body {
	color: #504a3e;
	text-align: center;
	background: ##ddd;
	font-family: 'Open Sans', Arial, Helvetica, sans-serif;
	line-height: 140%;
}

h1, h2, h3, h4, h5, label{
	font-weight: normal !important;
}

#container {
	background: transparent;
	border: none;
	width: 805px;
}

#main {
	margin-bottom: 20px;
}

#content {
	padding: 0px;
}

#tagline {
	display: none;
}

a {
	color: #184378 !important;
}

a:hover {
	color: #dc9536 !important;
	text-decoration: none !important;
}

#gateway-logos {
	display: none;
}

label {
	font-style: normal !important;
	margin-bottom: 5px;
}

table.form input.short {
	width: 230px;
}

/* @end */

/* @group Info Bar */

#info-bar {
	border-bottom: none;
	background: none;
}

/* @end */

/* @group Order Summary */

/* Insert your own logo (upload separatly) */
#logo {
  	display: block;
	width: 100%;
	height: 60px;
	background: url("http://cdn.gosoundcast.com/Navbar/long-logo.png") no-repeat center 0;
	margin-top: 20px;
}

#wallet{
	padding-top: 40px;
	background-color: transparent !important;
}

#thumbs td {
	padding: 20px;
}

#thumbs h3 {
	color: #504a3e !important;
	clear: both;
	font-size: 13px;
	line-height: 16px;
	padding-bottom: 3px;
}

#thumbs span, #thumbs h3 span {
	color: #504a3e !important;
	font-size: 13px;
	line-height: 16px;
}

#container.slim #overview table#thumbs td {
	padding: 10px;
}


#cost, #order-num {
	font-family: 'Open Sans', Arial, Helvetica, sans-serif;
	color: #504a3e;
	font-weight: normal;
	line-height: 120%;
	font-size: 40px;
}

#steps {
	font-family: 'Open Sans', Arial, Helvetica, sans-serif;
	line-height: 120%;
	font-size: 13px;
}

#overview {
	/*border-top: 7px solid #f93 !important;*/
	padding-top: 30px;
}

#overview h2 {
	color: #504a3e !important;
	font-style: italic;
	font-size: 13px;
}

#overview .hint {
	color: #184378;
}

/* @end */

/* @group Address+Emails+Buttons */

#main #overview, #email, #addresses, .group, #marketing-box {
	background: none;
	border: none;
	border-bottom: 1px solid #b2ada7;
	padding: 20px 0;
	font-family: 'Open Sans', Arial, Helvetica, sans-serif !important;
}

#buttons {
	background:none;
	border-bottom:1px solid #b2ada7;
	border-top: none;
	margin:0;
	padding: 0 0 20px 0;
	text-transform:uppercase;
}

#buttons input, button, #create-account input[type="submit"] {
	font-family: 'Open Sans', Arial, Helvetica, sans-serif;
	font-style: normal;
	font-weight: normal;
	font-size: 13px;
	color: #fff;
	border: none;
	border-radius: 3px;
/*	background-image: -moz-linear-gradient( 90deg, rgb( 140, 15, 21 ) 0%, rgb( 202, 28, 36 ) 100%);
	background-image: -webkit-linear-gradient( 90deg, rgb( 140, 15, 21 ) 0%, rgb( 202, 28, 36 ) 100%);*/
	background-color: #179924;
	box-shadow: 1px 1.732px 4px 0px rgb( 0, 0, 0 );
	padding: 5px 10px;
    cursor: pointer;
    text-transform:capitalize;
}

#buttons input:hover, button:hover, #create-account input[type="submit"] {
/*  background-image: -moz-linear-gradient( 90deg, rgb( 23, 15, 21 ) 0%, rgb( 202, 28, 36 ) 50%);
  background-image: -webkit-linear-gradient( 90deg, rgb( 23, 15, 21 ) 0%, rgb( 202, 28, 36 ) 50%);*/
}



#buttons small#cancel-purchase {
	font-size: 12px !important;
	padding-left: 10px !important;
	font-style: italic;
	text-transform:uppercase;
}

.group h3, .pgroup h3, #email label {
	color: #000;
	font-size: 22px;
	font-weight: normal;
	text-transform:capitalize;
	border-bottom: none;
	margin-bottom: 20px;
	font-family: 'Fauna One', serif;

	font-style: normal !important;
}


#email input {
	background: #E0D7C8;
	border: none;
	color: #231F20;
	font-family: 'Open Sans', Arial, Helvetica, sans-serif;
	font-style: normal;
	padding: 6px;
	width: 328px;
	margin-right: 40px;
}
.group input{
	background: #E0D7C8;
	border: none;
	color: #231F20;
	font-family: 'Open Sans', Arial, Helvetica, sans-serif;
	font-style: normal !important;
	padding: 6px;
}

#billing-is-shipping td {
	padding-top: 20px;
}

#container.slim {
	width:  440px;
}

#container.slim #header, #container.slim #main, #container.slim #footer {
	background-image: none;
}

#container.slim img.images{
	margin-bottom: 5px;
}

#container.slim #overview {
	border-bottom: none;
}

#container.slim h4 {
   color: #504a3e;
   font-size: 13px;
   font-weight: bold !important;
}

#container.slim div.group {
	border-top: 1px solid #b2ada7;
}

/* @end */


/* @group Footer */

/*#footer p {
	display:  none;
}*/
	#footer { background: transparent !important; }
/* @end */

/* @group Notifcations and Errors */

.address-notification {
	background: none;
	color: #504A3E;
	font-style: none !important;
	border: none;
	text-align: left;
}

.field-with-errors, .flash.error{
	margin-bottom: 0;
	border: none;
	background: none;
	padding: 0;
}

.field-with-errors .error-message, #discount-errors, .flash.error {
	color: #BF2B09 !important;
	font-weight: normal;
	text-transform: capitalize;
	font-size: 11px;
}

.flash.error {
	padding: 20px 0;
}

/* @end */

