<div id="page-body">
    <div id="account">
        <div class="container">
{% layout settings.customer_layout %}

<!-- <div id="template">
    <div class="template_header"> -->
        <div class="container account">
            <div class="row">
                <div class="text-center uppercase">
                    <h2 class="title">Reset Account Password</h2>
                </div>
            </div>
            <div class="row">
                <div class="text-center">
                    <p class="lead">Enter a new password for {{ email }}</p>
                </div>
            </div>
        </div>
            {% form 'reset_customer_password' %}
            {{ form.errors | default_errors }}
        <div class="container">
            <div class="row">
                <div class="col-xs-12 text-center">
                    <div id="password" class="clearfix">
                        <label class="large" for="password">Password</label>
                        <input type="password" placeholder="Password" value="" name="customer[password]" id="customer_password" class="large password input-text" size="16" />
                    </div>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-xs-12 text-center">
                    <div id="password_confirm" class="clearfix large_form">
                        <label class="large" for="password_confirmation">Password Confirmation</label>
                        <input type="password" placeholder="Password Confirmation" value="" name="customer[password_confirmation]" id="customer_password_confirmation" class="large password input-text" size="16" />
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-xs-12 text-center">
                <div class="buttons-set">
                        <button type="submit" class="button" value="Reset Password"/><span><span>Reset Password</span></span></button>
                    </div>

                    <!-- <div class="action_bottom buttons-set">
                        <button class="button account-btn" type="submit" value="Reset Password" />
                    </div> -->
                </div>
            </div>
        </div>
        {% endform %}
        <div class="padding-bottom48"></div>
